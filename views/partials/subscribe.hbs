<section class='subscribe'>
  <div class='container'>
    <div class='subscribe__container'>
      <h2 class='title title_white subscribe__title'>
        Subscribe to our Newsletter
      </h2>
      <form action='/subscribe' method='post' class='subscribe__form'>
        <input
          type='email'
          name='email'
          required
          placeholder='Your Email Address'
          class='subscribe__input-email'
        />
        <button type='submit' class='btn btn_no-icon subscribe__btn'>
          <span>
            Subscribe
          </span>
        </button>
      </form>
    </div>
  </div>
</section>